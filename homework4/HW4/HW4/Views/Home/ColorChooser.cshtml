

@using (Html.BeginForm("ColorChooser", "Home", FormMethod.Post))
{
    <h2>Create a New Color</h2>
    <h4>Please enter colors in HTML hexadecimal format: #AABBCC</h4>
    @Html.Label("Color 1")<br />
    @Html.TextBox("color1", "#090909", htmlAttributes: new { @class = "form-control"})<br />
    @Html.Label("Color 2")<br />
    @Html.TextBox("color2", "#111111", htmlAttributes: new { @class = "form-control"})<br />
    @Html.Label(" ")<br />
    <input type="submit" class="btn btn-primary convertBtn" value="Submit" />
}

@{ 
    ViewBag.Title = "ColorChooser";
}
