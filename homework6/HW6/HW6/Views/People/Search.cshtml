@model IEnumerable<HW6.Models.Person>

@{
    ViewBag.Title = "Search";
}


<h3 id="title"> Client Search</h3>
@using(Html.BeginForm("Search", "People", FormMethod.Get, new {@class = "form-inline"}))
{
    <div class="form-group">
        <div class="input-group">
            @Html.TextBox("name", "", new {@class="form-control", @placeholder = "Enter A Client Name", required = "required"})
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span>Submit</button>
            </span>
        </div>
    </div>
}

@if (ViewBag.display)
{
    if(Model.Count() == 0)
    {
    <h3>"Not Found!"</h3>
    }
    else
    {
        foreach(var p in Model)
        {
            <div>
                <a class="btn btn-primary btn-md" href="Details/@p.PersonID" role="button"> @p.FullName</a>
            </div>
        }
    }
}
            

